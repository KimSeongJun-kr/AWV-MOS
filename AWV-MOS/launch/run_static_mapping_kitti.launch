<launch>
    <arg name="use_bag_file" default="false" />
    <arg name="sequence" default="00" />
    <arg name="path_to_sequences" default="/path/to/sequences_folder/" />
    <arg name="scan_folder_path" default="$(arg path_to_sequences)/$(arg sequence)/velodyne/" />
    <arg name="label_folder_path" default="$(arg path_to_sequences)/$(arg sequence)/labels/" />
    <arg name="poses_file_path" default="$(arg path_to_sequences)/$(arg sequence)/poses.txt" />
    <arg name="times_file_path" default="$(arg path_to_sequences)/$(arg sequence)/times.txt" />
    <arg name="calib_file_path" default="$(arg path_to_sequences)/$(arg sequence)/calib.txt" />
    <arg name="m_config_file_path" default="$(find awv_mos)/config/params_kitti_mapping.yaml"/>

    <!-- Parameters -->
    <param name="use_bag_file" value="false" />
    <param name="prediction_write_path" value="$(find awv_mos)/history/predictions/kitti_mapping/sequences/$(arg sequence)/predictions/" />
    <param name="map_save_path" value="$(find awv_mos)/history/maps/kitti/" />
    <param name="scan_folder_path" value="$(arg scan_folder_path)" />
    <param name="label_folder_path" value="$(arg label_folder_path)" />
    <param name="poses_file_path" value="$(arg poses_file_path)" />
    <param name="times_file_path" value="$(arg times_file_path)" />
    <param name="calib_file_path" value="$(arg calib_file_path)" />
    <param name="m_config_file_path" value="$(arg m_config_file_path)" />
    <param name="m_log_write_path" value="$(find awv_mos)/history/log/"/>
    <rosparam file="$(arg m_config_file_path)" command="load" />

    <!-- AWV-MOS static mapping -->
    <node pkg="awv_mos" type="run_static_mapping" name="run_static_mapping" output="screen" respawn="false"/>

    <node pkg="rviz" type="rviz" name="awv_mos_rviz" args="-d $(find awv_mos)/config/rviz/scan_view.rviz" />
</launch>
